"""Tests for making sure experimental import of fuzzy_join work as expected."""

import textwrap
from sklearn.utils._testing import assert_run_python_script


def test_imports_strategies():
    # Make sure different import strategies work or fail as expected.

    # Since Python caches the imported modules, we need to run a child process
    # for every test case. Else, the tests would not be independent
    # (manually removing the imports from the cache (sys.modules) is not
    # recommended and can lead to many complications).

    good_import = """
    from dirty_cat.experimental import enable_fuzzy_join
    from dirty_cat import fuzzy_join
    """
    assert_run_python_script(textwrap.dedent(good_import))

    good_import_with_ensemble_first = """
    import dirty_cat
    from dirty_cat.experimental import enable_fuzzy_join
    from dirty_cat import fuzzy_join
    """
    assert_run_python_script(textwrap.dedent(good_import_with_ensemble_first))

    bad_imports = """
    import pytest
    with pytest.raises(ImportError):
        from dirty_cat import fuzzy_join
    with pytest.raises(ImportError):
        from dirty_cat._fuzzy_join import (
            fuzzy_join)
    import dirty_cat.experimental
    with pytest.raises(ImportError):
        from dirty_cat import fuzzy_join
    """
    assert_run_python_script(textwrap.dedent(bad_imports))
